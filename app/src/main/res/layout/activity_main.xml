<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_limit_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:onClick="setStartLimit"
            android:text="1"
            android:textColor="@color/gray_6"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-light"
            android:text="-"
            android:textColor="@color/gray_6"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/end_limit_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:onClick="setEndLimit"
            android:text="999"
            android:textColor="@color/gray_6"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="getRandomNumber"
        android:paddingBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_number_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/number_height"
            android:layout_marginEnd="@dimen/space_between_numbers"
            android:layout_marginStart="@dimen/space_between_numbers"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/num_p_3"/>

        <ImageView
            android:id="@+id/image_number_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/number_height"
            android:layout_marginEnd="@dimen/space_between_numbers"
            android:layout_marginStart="@dimen/space_between_numbers"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/num_p_7"/>

        <ImageView
            android:id="@+id/image_number_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/number_height"
            android:layout_marginEnd="@dimen/space_between_numbers"
            android:layout_marginStart="@dimen/space_between_numbers"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/num_p_9"/>

    </LinearLayout>

</LinearLayout>